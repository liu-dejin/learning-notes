.bg {
  width: 100vw;
  height: 100vh;
}

.content {
  width: 80vw;
  position: fixed;
  left: 10vw;
  bottom: 8vh;
}

.content .input {
  font-size: large;
  border: 1rpx solid black;
  border-radius: 10rpx;
  padding: 1.5vh 40rpx;
  margin-bottom: 1.5vh;
  color: red;
}

.content .redio {
  font-size: large;
  margin-bottom: 1.5vh;
  color: red;
  display: flex;
}

.content .check {
  font-size: large;
  margin-bottom: 1.5vh;
  color: red;
}

.check .checkbox-grop {
  margin-top: 1.5vh;
  color: red;
}

.check .checkbox-grop checkbox {
  margin-left: 20rpx;
}

.check .checkbox-grop checkbox:nth-child(1) {
  margin-left: 0;
}

.content button {
  font-size: large;
  background-color: red;
  color: white;
}

.content .phcolor {
  color: red;
}